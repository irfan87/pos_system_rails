<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Log In</h1>
			<%= form_tag sessions_path do %>
				<div class="col-md-10">
					<%= label_tag :username %>
					<%= text_field_tag :username %>
				</div>
				<div class="col-md-10">
					<%= label_tag :password %>
					<%= password_field_tag :password %>
				</div>
				<div class="col-md-10">
					<%= submit_tag "Log In" %>
					<%= link_to 'Sign up', signup_path %> as a member
				</div>
			<% end %>
		</div>
	</div>
</div>